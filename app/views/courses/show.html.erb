<section id="course" class="container famil">
  <div class="row">
    <div class="col-xl-6">

      <div id="course-header">
        <h1 class="gochi">
          <%= @course.title %>
        </h1>
        <ul class="notes">
          <li>
            <%= @course.duration %>
          </li>
          <li>
            <strong> PUBLISHED: </strong>
            <%= date_published(@course) %>
          </li>
        </ul>
      </div> <!-- course header -->

      <p class="fs-4 mt-4">
        <%= @course.description %>
      </p>

      <!-- <div id="actions" class="mt-5 gochi">
        <%= link_to "Edit" , edit_course_path(@course) %>
          <%= link_to "Delete" , delete_course_path(@course), class: "delete ms-4" %>
      </div> -->

    </div> <!-- col-xl-6 -->
  </div> <!-- row -->

  <div class="row gochi mt-5">
    <div class="col-xl-6">
      <h2 class="fs-1">Lessons (<%= @lessons.count %>)</h2>
      <ol id="lesson-list" class="mt-3">
        <% @lessons.each do |lesson| %>
          <li>
            <%= link_to course_lesson_path(@course, lesson) do %>
              <%= lesson.title %> <br />
                <span class="duration">
                  <%= lesson.duration %>
                </span>
                <% end %> <!-- Link -->
          </li>
          <% end %> <!-- Loop -->
            </ul>
    </div> <!-- col-xl-6 -->
  </div> <!-- row -->
</section>