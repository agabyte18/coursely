<%= form_with(model: course) do |f| %>

  <div class="mb-3">
    <%=f.text_field :title, autofocus: true, placeholder: "Title" , class: "form-control" %>
  </div>

  <div class="mb-3">
    <%=f.text_field :duration, placeholder: "Duration" , class: "form-control" %>
  </div>

  <div class="mb-3">
    <%=f.date_field :date_published, {class: "form-control" } %>
  </div>

  <div class="mb-4">
    <%=f.text_area :description, placeholder: "Description" , rows: 5, class: "form-control" %>
  </div>


  <div class="d-grid gap-2">
    <%= f.submit "Save" , class: "tile-shadow btn btn-primary btn-lg fw-bold" %>
  </div>

  <% end %>